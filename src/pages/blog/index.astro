---
import blogMetaData from '../../data/blogMeta.js';
---
<main class="max-w-3xl mx-auto py-8">
  <h1 class="text-3xl font-bold mb-8">Blog</h1>
  <ul class="space-y-8">
    {blogMetaData.map(post => (
      <li key={post.id} class="bg-white rounded-lg shadow p-6">
        <a href={`/blog/${post.slug}`} class="text-2xl font-semibold text-blue-700 hover:underline">{post.title}</a>
        <p class="text-xs text-gray-500 mb-2">{post.date}</p>
        <p class="text-gray-700 mb-2">{post.excerpt}</p>
        <a href={`/blog/${post.slug}`} class="text-blue-600 hover:underline text-sm">Read more â†’</a>
      </li>
    ))}
  </ul>
</main>
